{
  "version": 2,
  "buildCommand": "prisma generate && npm run build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "node_modules/.prisma/**", "node_modules/@prisma/**"],
        "maxDuration": 60,
        "memory": 1024
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "api/index.js" }],
}
